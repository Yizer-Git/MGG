<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MGG" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 主题色 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- 背景色 -->
        <item name="android:windowBackground">@color/background</item>
        
        <!-- 状态栏 -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- 文本色 -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <style name="Theme.MGG" parent="Base.Theme.MGG" />
    
    <!-- 全屏主题（启动页） -->
    <style name="Theme.MGG.FullScreen" parent="Theme.MGG">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- 输入框样式 -->
    <style name="TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>
</resources>
