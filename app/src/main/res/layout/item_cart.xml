<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_medium"
    app:cardBackgroundColor="@color/color_surface_main"
    app:cardCornerRadius="@dimen/corner_radius_card"
    app:cardElevation="0dp"
    app:strokeColor="@color/color_frame"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_large">

        <CheckBox
            android:id="@+id/cbSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/color_accent"
            app:layout_constraintBottom_toTopOf="@id/layoutActionRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProductImage"
            android:layout_width="@dimen/cart_item_image_size"
            android:layout_height="@dimen/cart_item_image_size"
            android:background="@drawable/bg_surface_card"
            android:contentDescription="@string/product_image"
            android:scaleType="centerCrop"
            android:layout_marginStart="@dimen/spacing_medium"
            app:layout_constraintBottom_toTopOf="@id/layoutActionRow"
            app:layout_constraintStart_toEndOf="@id/cbSelect"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/RoundedAll"
            tools:src="@drawable/ancient_book" />

        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/layoutActionRow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivProductImage"
            app:layout_constraintTop_toTopOf="@id/ivProductImage">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:textAppearance="@style/TextAppearance.MGG.Headline3"
                tools:text="桃木摆件 · 国潮系列桃木摆件 · 匠心礼盒" />

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:textAppearance="@style/TextAppearance.MGG.Price"
                android:textColor="@color/color_accent_dark"
                android:textStyle="bold"
                tools:text="¥108.00" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutActionRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="@dimen/min_touch_target"
                android:layout_height="@dimen/min_touch_target"
                android:background="@drawable/bg_surface_card"
                android:contentDescription="@string/cart_delete_item"
                android:padding="@dimen/spacing_small"
                android:src="@drawable/ic_delete"
                android:tint="@color/text_secondary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/layoutQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/btnDecrease"
                    android:layout_width="@dimen/cart_quantity_button_size"
                    android:layout_height="@dimen/cart_quantity_button_size"
                    android:background="@drawable/bg_quantity_button"
                    android:contentDescription="@string/cart_quantity_decrease"
                    android:padding="@dimen/spacing_xs"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_minus"
                    android:tint="@color/text_primary" />

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="@dimen/cart_quantity_button_size"
                    android:layout_height="@dimen/cart_quantity_button_size"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:layout_marginEnd="@dimen/spacing_xs"
                    android:background="@drawable/bg_quantity_counter"
                    android:gravity="center"
                    android:minWidth="28dp"
                    android:text="1"
                    android:textAppearance="@style/TextAppearance.MGG.Body"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnIncrease"
                    android:layout_width="@dimen/cart_quantity_button_size"
                    android:layout_height="@dimen/cart_quantity_button_size"
                    android:background="@drawable/bg_quantity_button"
                    android:contentDescription="@string/cart_quantity_increase"
                    android:padding="@dimen/spacing_xs"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_plus"
                    android:tint="@color/text_primary" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
