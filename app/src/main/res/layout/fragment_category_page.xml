<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollCategory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_base"
    android:fillViewport="true"
    android:overScrollMode="never"
    tools:context=".ui.main.category.CategoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_home_horizontal"
        android:paddingTop="@dimen/spacing_xl"
        android:paddingEnd="@dimen/spacing_home_horizontal"
        android:paddingBottom="@dimen/spacing_huge">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/topicBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/category_banner_height"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/corner_radius_card_large"
            app:cardElevation="0dp"
            app:strokeColor="@color/color_outline_neutral"
            app:strokeWidth="1dp">

            <ImageView
                android:id="@+id/ivTopicBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_desc_topic_banner"
                android:scaleType="centerCrop"
                android:src="@drawable/category_banner_photo"
                tools:ignore="VectorDrawableCompat" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/topicHighlightCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_section_spacing"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/corner_radius_card"
            app:cardElevation="0dp"
            app:strokeColor="@color/color_outline_neutral"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/info_card_padding">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivHighlightIcon"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:contentDescription="@string/topic_highlight_title"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_heritage_inheritor"
                    android:tint="@color/color_accent"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"
                    tools:ignore="UseAppTint" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvHighlightTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/topic_highlight_title"
                        android:textAppearance="@style/TextAppearance.MGG.Headline3"
                        tools:text="工坊开放日" />

                    <TextView
                        android:id="@+id/tvHighlightDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="@string/topic_highlight_description"
                        android:textAppearance="@style/TextAppearance.MGG.BodySecondary"
                        android:textColor="@color/text_secondary"
                        tools:text="手作体验课程更新，限时预约抢位。" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHighlightMore"
                    style="@style/Widget.MGG.Button.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_more" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTopNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/corner_radius_card"
            app:cardElevation="0dp"
            app:strokeColor="@color/color_outline_neutral"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/info_card_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNewsTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/topic_fast_news"
                        android:textAppearance="@style/TextAppearance.MGG.Headline3"
                        tools:text="精选快讯" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNewsMore"
                        style="@style/Widget.MGG.Button.Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/topic_view_more" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvNewsDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:textAppearance="@style/TextAppearance.MGG.BodySecondary"
                    android:textColor="@color/text_secondary"
                    tools:text="米嘎嘎携手乐山沙湾：春季非遗市集将于 3.28 启幕。" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardArticleList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_section_spacing"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/corner_radius_card"
            app:cardElevation="0dp"
            app:strokeColor="@color/color_outline_neutral"
            app:strokeWidth="1dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/info_card_padding">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewArticles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_article" />

                <TextView
                    android:id="@+id/tvEmptyArticles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/article_empty"
                    android:textAppearance="@style/TextAppearance.MGG.BodySecondary"
                    android:textColor="@color/text_secondary"
                    android:visibility="gone" />

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressBarArticles"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:indicatorColor="@color/color_accent"
                    app:indicatorSize="48dp" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
