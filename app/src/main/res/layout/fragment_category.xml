<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_base"
    tools:context=".ui.main.category.CategoryFragment">

    <!-- Top bar with back arrow and title -->
    <LinearLayout
        android:id="@+id/layoutTopicHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnTopicBack"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_surface_card"
            android:contentDescription="@string/content_desc_back"
            android:padding="8dp"
            android:src="@drawable/ic_nav_back"
            android:tint="@color/text_primary" />

        <TextView
            android:id="@+id/tvCultureTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="@string/culture_section_title"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnTopicShare"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_surface_card"
            android:contentDescription="@string/content_desc_share"
            android:padding="8dp"
            android:src="@drawable/ic_traditional_umbrella"
            android:tint="@color/text_primary" />

    </LinearLayout>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvCultureSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/culture_section_subtitle"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/layoutTopicHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable tabs -->
    <HorizontalScrollView
        android:id="@+id/topicTabsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tvCultureSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingEnd="8dp"
            app:singleSelection="true"
            app:selectionRequired="false"
            app:chipSpacingHorizontal="12dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:tag=""
                android:text="@string/article_filter_all"
                android:textSize="14sp"
                android:textColor="@color/chip_text_selector"
                app:chipBackgroundColor="@color/chip_background_selector"
                app:chipStrokeColor="@color/chip_stroke_selector"
                app:chipStrokeWidth="1dp"
                app:checkedIconVisible="false"
                app:rippleColor="@color/color_accent_transparent_10" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBrandStory"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="品牌故事"
                android:text="@string/article_filter_brand"
                android:textSize="14sp"
                android:textColor="@color/chip_text_selector"
                app:chipBackgroundColor="@color/chip_background_selector"
                app:chipStrokeColor="@color/chip_stroke_selector"
                app:chipStrokeWidth="1dp"
                app:checkedIconVisible="false"
                app:rippleColor="@color/color_accent_transparent_10" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHeritage"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="非遗技艺"
                android:text="@string/article_filter_heritage"
                android:textSize="14sp"
                android:textColor="@color/chip_text_selector"
                app:chipBackgroundColor="@color/chip_background_selector"
                app:chipStrokeColor="@color/chip_stroke_selector"
                app:chipStrokeWidth="1dp"
                app:checkedIconVisible="false"
                app:rippleColor="@color/color_accent_transparent_10" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTrend"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="国潮资讯"
                android:text="@string/article_filter_trend"
                android:textSize="14sp"
                android:textColor="@color/chip_text_selector"
                app:chipBackgroundColor="@color/chip_background_selector"
                app:chipStrokeColor="@color/chip_stroke_selector"
                app:chipStrokeWidth="1dp"
                app:checkedIconVisible="false"
                app:rippleColor="@color/color_accent_transparent_10" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipProduct"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="产品故事"
                android:text="@string/article_filter_product"
                android:textSize="14sp"
                android:textColor="@color/chip_text_selector"
                app:chipBackgroundColor="@color/chip_background_selector"
                app:chipStrokeColor="@color/chip_stroke_selector"
                app:chipStrokeWidth="1dp"
                app:checkedIconVisible="false"
                app:rippleColor="@color/color_accent_transparent_10" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Rolling banner -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topicBanner"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/topicTabsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/color_frame"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/ivTopicBanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/content_desc_topic_banner"
            android:scaleType="centerCrop"
            android:src="@drawable/category_banner_photo" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Activity highlight -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topicHighlightCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/color_surface_main"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/color_frame"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/topicBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/topic_highlight_title"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_heritage_inheritor"
                    android:tint="@color/color_accent"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

                <TextView
                    android:id="@+id/tvHighlightTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/topic_highlight_title"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHighlightDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/topic_highlight_description"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Content list -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshArticles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/topicHighlightCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewArticles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_surface_card"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="80dp"
                tools:listitem="@layout/item_article" />

            <TextView
                android:id="@+id/tvEmptyArticles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp"
                android:text="@string/article_empty"
                android:textColor="@color/text_secondary"
                android:visibility="gone" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressBarArticles"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:indicatorColor="@color/color_accent"
                app:indicatorSize="48dp" />

        </FrameLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
