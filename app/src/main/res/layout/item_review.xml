<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_medium"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/color_surface_main"
    app:cardCornerRadius="@dimen/corner_radius_card"
    app:cardElevation="0dp"
    app:strokeColor="@color/color_frame"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_large">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/review_avatar_size"
            android:layout_height="@dimen/review_avatar_size"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:background="@drawable/bg_avatar_placeholder"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_header_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MGG.Body"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/ratingBar"
            app:layout_constraintStart_toEndOf="@id/imgAvatar"
            app:layout_constraintTop_toTopOf="@id/imgAvatar"
            tools:text="古风拥趸" />

        <TextView
            android:id="@+id/tvCreatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textAppearance="@style/TextAppearance.MGG.Caption"
            app:layout_constraintStart_toStartOf="@id/tvNickname"
            app:layout_constraintTop_toBottomOf="@id/tvNickname"
            tools:text="2024-01-15" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:layout_marginStart="@dimen/spacing_small"
            android:numStars="5"
            android:stepSize="0.5"
            app:layout_constraintBaseline_toBaselineOf="@id/tvNickname"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:textAppearance="@style/TextAppearance.MGG.Body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgAvatar"
            tools:text="这款米花糖松脆香甜，配上茶饮简直太搭！" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewImages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvContent" />

        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewImages">

            <TextView
                android:id="@+id/tvLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/spacing_xs"
                android:drawableStart="@drawable/ic_ancient_coin"
                android:drawableTint="@color/color_accent"
                android:textAppearance="@style/TextAppearance.MGG.Caption"
                tools:text="128" />

            <TextView
                android:id="@+id/tvCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_large"
                android:drawablePadding="@dimen/spacing_xs"
                android:drawableStart="@drawable/ic_message"
                android:drawableTint="@color/color_accent"
                android:textAppearance="@style/TextAppearance.MGG.Caption"
                tools:text="12" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
