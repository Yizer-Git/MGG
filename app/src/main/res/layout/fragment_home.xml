<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_base">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/homeScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="@dimen/spacing_large"
        android:paddingBottom="@dimen/spacing_xxl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_xl"
            android:paddingEnd="@dimen/spacing_xl">

            <!-- Greeting -->
            <LinearLayout
                android:id="@+id/layoutGreeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_large">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGreeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/greeting_evening"
                        android:textAppearance="@style/TextAppearance.MGG.Headline2" />

                    <TextView
                        android:id="@+id/tvGreetingSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="@string/greeting_subtitle"
                        android:textAppearance="@style/TextAppearance.MGG.BodySecondary" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/btnCart"
                    android:layout_width="@dimen/min_touch_target"
                    android:layout_height="@dimen/min_touch_target"
                    android:background="@drawable/bg_surface_card"
                    android:contentDescription="@string/content_desc_cart"
                    android:padding="@dimen/spacing_small"
                    android:src="@drawable/ic_nav_cart"
                    android:tint="@color/color_accent" />

            </LinearLayout>

            <!-- Search Bar -->
            <LinearLayout
                android:id="@+id/layoutSearch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_bar_height"
                android:background="@drawable/bg_search_bar"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/spacing_large"
                android:paddingEnd="@dimen/spacing_large">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:contentDescription="@string/search_hint"
                    android:src="@android:drawable/ic_menu_search"
                    android:tint="@color/text_secondary" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/search_hint"
                    android:imeOptions="actionSearch"
                    android:paddingStart="@dimen/spacing_medium"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.MGG.Body"
                    android:textColorHint="@color/text_hint" />

                <ImageView
                    android:id="@+id/ivScan"
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:contentDescription="@string/content_desc_qr_scan"
                    android:src="@drawable/ic_ancient_coin"
                    android:tint="@color/color_accent" />
            </LinearLayout>

            <!-- Heritage Knowledge -->
            <LinearLayout
                android:id="@+id/layoutHeritageKnowledge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxl"
                android:layout_marginBottom="@dimen/spacing_large"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvKnowledgeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_knowledge_title"
                    android:textAppearance="@style/TextAppearance.MGG.Headline3"
                    android:textColor="@color/color_brand_primary" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipKnowledgeTags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    app:chipSpacingHorizontal="@dimen/spacing_medium"
                    app:chipSpacingVertical="@dimen/spacing_small"
                    app:singleLine="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipHistory"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="@string/home_knowledge_chip_history"
                        android:textColor="@color/color_accent_dark"
                        app:chipBackgroundColor="@color/color_knowledge_chip" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMaterial"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="@string/home_knowledge_chip_material"
                        android:textColor="@color/color_accent_dark"
                        app:chipBackgroundColor="@color/color_knowledge_chip" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipCraft"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="@string/home_knowledge_chip_skill"
                        android:textColor="@color/color_accent_dark"
                        app:chipBackgroundColor="@color/color_knowledge_chip" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipDesign"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="@string/home_knowledge_chip_style"
                        android:textColor="@color/color_accent_dark"
                        app:chipBackgroundColor="@color/color_knowledge_chip" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipTechnique"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="@string/home_knowledge_chip_craft"
                        android:textColor="@color/color_accent_dark"
                        app:chipBackgroundColor="@color/color_knowledge_chip" />
                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:id="@+id/tvKnowledgeDailyLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:text="@string/home_knowledge_daily_title"
                    android:textAppearance="@style/TextAppearance.MGG.BodySecondary"
                    android:textColor="@color/text_primary" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardHeritageDaily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    app:cardBackgroundColor="@color/color_heritage_card"
                    app:cardCornerRadius="@dimen/corner_radius_card_large"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/spacing_xl">

                        <TextView
                            android:id="@+id/tvHeritageTag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_tag_chip"
                            android:paddingStart="@dimen/spacing_small"
                            android:paddingTop="@dimen/spacing_xs"
                            android:paddingEnd="@dimen/spacing_small"
                            android:paddingBottom="@dimen/spacing_xs"
                        android:text="@string/home_knowledge_card_tag"
                        android:textAppearance="@style/TextAppearance.MGG.Caption"
                        android:textColor="@color/color_accent_dark"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvHeritageTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:text="@string/home_knowledge_card_title"
                        android:textAppearance="@style/TextAppearance.MGG.Headline2"
                        android:textColor="@color/color_brand_primary"
                            app:layout_constraintEnd_toStartOf="@id/ivHeritageImage"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvHeritageTag" />

                        <TextView
                            android:id="@+id/tvHeritageDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:lineSpacingMultiplier="1.3"
                        android:text="@string/home_knowledge_card_description"
                        android:textAppearance="@style/TextAppearance.MGG.BodySecondary"
                        android:textColor="@color/text_primary"
                            app:layout_constraintEnd_toStartOf="@id/ivHeritageImage"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvHeritageTitle" />

                        <TextView
                            android:id="@+id/tvHeritageMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:text="@string/home_knowledge_card_cta"
                        android:textAppearance="@style/TextAppearance.MGG.BodySecondary"
                        android:textColor="@color/color_brand_primary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvHeritageDescription" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivHeritageImage"
                            android:layout_width="120dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="@dimen/spacing_large"
                            android:contentDescription="@string/home_knowledge_card_image_desc"
                            android:scaleType="centerCrop"
                            android:src="@drawable/home_banner_photo_4"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

<!-- Section Header -->
            <LinearLayout
                android:id="@+id/layoutSectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSectionTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/home_recommended_exhibitions"
                    android:textAppearance="@style/TextAppearance.MGG.Headline3" />

                <TextView
                    android:id="@+id/tvSectionMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_more"
                    android:textAppearance="@style/TextAppearance.MGG.BodySecondary" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:nestedScrollingEnabled="false"
                tools:itemCount="4"
                tools:listitem="@layout/item_product" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressHome"
                style="@style/Widget.MaterialComponents.CircularProgressIndicator.ExtraSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_large"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:gravity="center"
                android:text="@string/home_product_empty_placeholder"
                android:textAppearance="@style/TextAppearance.MGG.BodySecondary"
                android:textColor="@color/text_secondary"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
