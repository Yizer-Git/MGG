<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_base">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/homeScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="@dimen/spacing_large"
        android:paddingBottom="@dimen/spacing_xxl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_xl"
            android:paddingEnd="@dimen/spacing_xl">

            <!-- Greeting -->
            <LinearLayout
                android:id="@+id/layoutGreeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_large">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGreeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/greeting_evening"
                        android:textAppearance="@style/TextAppearance.MGG.Headline2" />

                    <TextView
                        android:id="@+id/tvGreetingSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="@string/greeting_subtitle"
                        android:textAppearance="@style/TextAppearance.MGG.BodySecondary" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/btnCart"
                    android:layout_width="@dimen/min_touch_target"
                    android:layout_height="@dimen/min_touch_target"
                    android:background="@drawable/bg_surface_card"
                    android:contentDescription="@string/content_desc_cart"
                    android:padding="@dimen/spacing_small"
                    android:src="@drawable/ic_nav_cart"
                    android:tint="@color/color_accent" />

            </LinearLayout>

            <!-- Search Bar -->
            <LinearLayout
                android:id="@+id/layoutSearch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_bar_height"
                android:background="@drawable/bg_search_bar"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/spacing_large"
                android:paddingEnd="@dimen/spacing_large">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:contentDescription="@string/search_hint"
                    android:src="@android:drawable/ic_menu_search"
                    android:tint="@color/text_secondary" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/search_hint"
                    android:imeOptions="actionSearch"
                    android:paddingStart="@dimen/spacing_medium"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.MGG.Body"
                    android:textColorHint="@color/text_hint" />

                <ImageView
                    android:id="@+id/ivScan"
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:contentDescription="@string/content_desc_qr_scan"
                    android:src="@drawable/ic_ancient_coin"
                    android:tint="@color/color_accent" />
            </LinearLayout>

            <!-- Hero Banner -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cultureCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxl"
                android:layout_marginBottom="@dimen/spacing_large"
                app:cardBackgroundColor="@color/color_surface_main"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="0dp"
                app:strokeColor="@color/color_frame"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_xl">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivCulture"
                        android:layout_width="@dimen/feature_card_image_size"
                        android:layout_height="@dimen/feature_card_image_size"
                        android:contentDescription="@string/culture_section_title"
                        android:scaleType="centerCrop"
                        android:src="@drawable/home_banner_photo_1"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvCultureHeadline"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_large"
                        android:text="@string/home_culture_title"
                        android:textAppearance="@style/TextAppearance.MGG.Headline2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivCulture"
                        app:layout_constraintTop_toTopOf="@id/ivCulture" />

                    <TextView
                        android:id="@+id/tvCultureDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_large"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="@string/home_culture_description"
                        android:textAppearance="@style/TextAppearance.MGG.BodySecondary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivCulture"
                        app:layout_constraintTop_toBottomOf="@id/tvCultureHeadline" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCultureExplore"
                        style="@style/Widget.MGG.Button.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height"
                        android:layout_marginStart="@dimen/spacing_large"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:text="@string/home_culture_action"
                        app:icon="@drawable/ic_chinese_knot"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/spacing_small"
                        app:iconTint="@color/text_on_accent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivCulture"
                        app:layout_constraintTop_toBottomOf="@id/tvCultureDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Section Header -->
            <LinearLayout
                android:id="@+id/layoutSectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSectionTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/home_recommended_exhibitions"
                    android:textAppearance="@style/TextAppearance.MGG.Headline3" />

                <TextView
                    android:id="@+id/tvSectionMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_more"
                    android:textAppearance="@style/TextAppearance.MGG.BodySecondary" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:nestedScrollingEnabled="false"
                tools:itemCount="4"
                tools:listitem="@layout/item_product" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressHome"
                style="@style/Widget.MaterialComponents.CircularProgressIndicator.ExtraSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_large"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:gravity="center"
                android:text="@string/home_product_empty_placeholder"
                android:textAppearance="@style/TextAppearance.MGG.BodySecondary"
                android:textColor="@color/text_secondary"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
