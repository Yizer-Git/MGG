<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_base">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshCommunity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollCommunity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:paddingBottom="@dimen/spacing_huge">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_home_horizontal"
                android:paddingTop="@dimen/spacing_huge"
                android:paddingEnd="@dimen/spacing_home_horizontal">

                <!-- Header -->
                <LinearLayout
                    android:id="@+id/layoutExploreHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvExploreTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/explore_title"
                        android:textAppearance="@style/TextAppearance.MGG.Headline2"
                        android:textColor="@color/text_primary"
                        tools:text="探索民俗" />

                    <TextView
                        android:id="@+id/tvExploreSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="@string/explore_subtitle"
                        android:textAppearance="@style/TextAppearance.MGG.BodySecondary"
                        tools:text="发现匠人故事与节庆灵感" />
                </LinearLayout>

                <!-- Filter Chips -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupExploreFilters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_small"
                    app:chipSpacingHorizontal="@dimen/spacing_medium"
                    app:chipSpacingVertical="@dimen/spacing_small"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRecommend"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/explore_tab_recommend"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="@color/color_outline_neutral"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipHandmade"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/explore_tab_handmade"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="@color/color_outline_neutral"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFestival"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/explore_tab_festival"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="@color/color_outline_neutral"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipInheritor"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/explore_tab_inheritor"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="@color/color_outline_neutral"
                        app:chipStrokeWidth="1dp" />
                </com.google.android.material.chip.ChipGroup>

                <!-- Banner Carousel -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCommunityBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/home_section_spacing"
                    app:cardBackgroundColor="@color/color_surface_main"
                    app:cardCornerRadius="@dimen/corner_radius_card_large"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false"
                    app:strokeColor="@color/color_outline_neutral"
                    app:strokeWidth="1dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/vpCommunityBanner"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/home_banner_height"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:overScrollMode="never"
                            android:paddingStart="@dimen/banner_side_peek"
                            android:paddingEnd="@dimen/banner_side_peek"
                            tools:itemCount="3" />

                        <LinearLayout
                            android:id="@+id/layoutCommunityBannerIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="@dimen/spacing_large"
                            android:gravity="center"
                            android:orientation="horizontal" />
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Review List -->
                <TextView
                    android:id="@+id/tvCommunitySectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/home_section_spacing"
                    android:text="@string/explore_reviews_title"
                    android:textAppearance="@style/TextAppearance.MGG.Headline3"
                    android:textColor="@color/text_primary"
                    tools:text="口碑精选" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewCommunity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_review" />

                <TextView
                    android:id="@+id/emptyCommunity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:text="@string/explore_empty"
                    android:textAppearance="@style/TextAppearance.MGG.BodySecondary"
                    android:textColor="@color/text_secondary"
                    android:visibility="gone"
                    tools:visibility="gone" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressCommunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:indicatorColor="@color/color_accent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
