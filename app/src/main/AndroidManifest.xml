<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MGG"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        
        <!-- 登录界面（启动页） -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 注册界面 -->
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:screenOrientation="portrait" />
        
        <!-- 主界面 -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- 产品详情页 -->
        <activity
            android:name=".ui.product.ProductDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.order.OrderConfirmActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.main.cart.CartActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.address.AddressListActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.address.AddressEditActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.order.OrderListActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.order.OrderDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.article.ArticleDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.main.community.ReviewDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.profile.PersonalInfoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.profile.AccountSecurityActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.profile.PhoneBindingActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.profile.InvoiceActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.profile.FeedbackActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>

</manifest>
